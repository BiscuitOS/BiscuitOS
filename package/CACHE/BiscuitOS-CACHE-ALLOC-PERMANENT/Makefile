################################################
#
# BiscuitOS-CACHE-ALLOC-PERMANENT
#
################################################
PK_CACHE_ALLOC_PERMANENT_NAME        := BiscuitOS-CACHE-ALLOC-PERMANENT
PK_CACHE_ALLOC_PERMANENT_VERSION     := $(CONFIG_PK_CACHE_ALLOC_PERMANENT_VERSION)
PK_CACHE_ALLOC_PERMANENT_SITE        := $(CONFIG_PK_CACHE_ALLOC_PERMANENT_URL)
PK_CACHE_ALLOC_PERMANENT_GITHUB      := $(CONFIG_PK_CACHE_ALLOC_PERMANENT_GITHUB)
PK_CACHE_ALLOC_PERMANENT_SUBNAME     :=
PK_CACHE_ALLOC_PERMANENT_BUILDARCH   := $(CONFIG_PK_CACHE_ALLOC_PERMANENT_BUILDARCH)
PK_CACHE_ALLOC_PERMANENT_DIR         := $(srctree)/package/CACHE/BiscuitOS-CACHE-ALLOC-PERMANENT
PK_CACHE_ALLOC_PERMANENT_PATCH       := $(PK_CACHE_ALLOC_PERMANENT_DIR)/patch
PK_CACHE_ALLOC_PERMANENT_BSBIT       := BiscuitOS-CACHE-ALLOC-PERMANENT-$(PK_CACHE_ALLOC_PERMANENT_VERSION).bsbit
PK_CACHE_ALLOC_PERMANENT_OUT         :=
PK_CACHE_ALLOC_PERMANENT_SCRIPTS     := $(srctree)/scripts/package/package-kernel.sh
PK_CACHE_ALLOC_PERMANENT_TAR         := $(CONFIG_PK_CACHE_ALLOC_PERMANENT_TAR)
PK_CACHE_ALLOC_PERMANENT_PACKAGE     :=
PK_CACHE_ALLOC_PERMANENT_CONFIG      := $(CONFIG_PK_CACHE_ALLOC_PERMANENT_CONFIG)
SUB_TARGET                  += $(PK_CACHE_ALLOC_PERMANENT_DIR)/build

PK_CACHE_ALLOC_PERMANENT_sh = $(CONFIG_SHELL) $(PK_CACHE_ALLOC_PERMANENT_SCRIPTS) \
                 $1X \
                 $(PK_CACHE_ALLOC_PERMANENT_NAME)X \
                 $(PK_CACHE_ALLOC_PERMANENT_VERSION)X \
                 $(PK_CACHE_ALLOC_PERMANENT_SITE)X \
                 $(PK_CACHE_ALLOC_PERMANENT_GITHUB)X \
                 $(PK_CACHE_ALLOC_PERMANENT_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_CACHE_ALLOC_PERMANENT_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_CACHE_ALLOC_PERMANENT_SUBNAME)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_CONFIG)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_LIBPATH)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_CPPFLAGS)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_DPKCONFIG)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_CFLAGS)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_LDFLAGS)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_CXXFLAGS)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_ASFLAGS)X \
                 $(PK_CACHE_ALLOC_PERMANENT_BSBIT)X \
                 $(PK_CACHE_ALLOC_PERMANENT_BUILDARCH)X \
		 $(PK_CACHE_ALLOC_PERMANENT_CSRCFILE)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_SRCFILE)X \
                 $(CONFIG_PK_CACHE_ALLOC_PERMANENT_CSRCFILE)

$(PK_CACHE_ALLOC_PERMANENT_DIR)/build: FORCE
	$(Q)$(call PK_CACHE_ALLOC_PERMANENT_sh,$(srctree))
