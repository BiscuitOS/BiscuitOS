################################################
#
# BiscuitOS-CACHE-TOOLS-LIKWID
#
################################################
PK_CACHE_TOOLS_LIKWID_NAME        := BiscuitOS-CACHE-TOOLS-LIKWID
PK_CACHE_TOOLS_LIKWID_VERSION     := $(CONFIG_PK_CACHE_TOOLS_LIKWID_VERSION)
PK_CACHE_TOOLS_LIKWID_SITE        := $(CONFIG_PK_CACHE_TOOLS_LIKWID_URL)
PK_CACHE_TOOLS_LIKWID_GITHUB      := $(CONFIG_PK_CACHE_TOOLS_LIKWID_GITHUB)
PK_CACHE_TOOLS_LIKWID_SUBNAME     :=
PK_CACHE_TOOLS_LIKWID_BUILDARCH   := $(CONFIG_PK_CACHE_TOOLS_LIKWID_BUILDARCH)
PK_CACHE_TOOLS_LIKWID_DIR         := $(srctree)/package/CACHE/BiscuitOS-CACHE-TOOLS-LIKWID
PK_CACHE_TOOLS_LIKWID_PATCH       := $(PK_CACHE_TOOLS_LIKWID_DIR)/patch
PK_CACHE_TOOLS_LIKWID_BSBIT       := BiscuitOS-CACHE-TOOLS-LIKWID-$(PK_CACHE_TOOLS_LIKWID_VERSION).bsbit
PK_CACHE_TOOLS_LIKWID_OUT         :=
PK_CACHE_TOOLS_LIKWID_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_CACHE_TOOLS_LIKWID_TAR         := $(CONFIG_PK_CACHE_TOOLS_LIKWID_TAR)
PK_CACHE_TOOLS_LIKWID_PACKAGE     :=
PK_CACHE_TOOLS_LIKWID_CONFIG      := $(CONFIG_PK_CACHE_TOOLS_LIKWID_CONFIG)
SUB_TARGET                  += $(PK_CACHE_TOOLS_LIKWID_DIR)/build

PK_CACHE_TOOLS_LIKWID_sh = $(CONFIG_SHELL) $(PK_CACHE_TOOLS_LIKWID_SCRIPTS) \
                 $1X \
                 $(PK_CACHE_TOOLS_LIKWID_NAME)X \
                 $(PK_CACHE_TOOLS_LIKWID_VERSION)X \
                 $(PK_CACHE_TOOLS_LIKWID_SITE)X \
                 $(PK_CACHE_TOOLS_LIKWID_GITHUB)X \
                 $(PK_CACHE_TOOLS_LIKWID_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_CACHE_TOOLS_LIKWID_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_CACHE_TOOLS_LIKWID_SUBNAME)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_CONFIG)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_LIBPATH)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_CPPFLAGS)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_DPKCONFIG)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_CFLAGS)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_LDFLAGS)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_CXXFLAGS)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_ASFLAGS)X \
                 $(PK_CACHE_TOOLS_LIKWID_BSBIT)X \
                 $(PK_CACHE_TOOLS_LIKWID_BUILDARCH)X \
		 $(PK_CACHE_TOOLS_LIKWID_CSRCFILE)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_SRCFILE)X \
                 $(CONFIG_PK_CACHE_TOOLS_LIKWID_CSRCFILE)

$(PK_CACHE_TOOLS_LIKWID_DIR)/build: FORCE
	$(Q)$(call PK_CACHE_TOOLS_LIKWID_sh,$(srctree))
