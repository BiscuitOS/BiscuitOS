################################################
#
# BiscuitOS-CACHE-SPLIT-LOCK
#
################################################
PK_CACHE_SPLIT_LOCK_NAME        := BiscuitOS-CACHE-SPLIT-LOCK
PK_CACHE_SPLIT_LOCK_VERSION     := $(CONFIG_PK_CACHE_SPLIT_LOCK_VERSION)
PK_CACHE_SPLIT_LOCK_SITE        := $(CONFIG_PK_CACHE_SPLIT_LOCK_URL)
PK_CACHE_SPLIT_LOCK_GITHUB      := $(CONFIG_PK_CACHE_SPLIT_LOCK_GITHUB)
PK_CACHE_SPLIT_LOCK_SUBNAME     :=
PK_CACHE_SPLIT_LOCK_BUILDARCH   := $(CONFIG_PK_CACHE_SPLIT_LOCK_BUILDARCH)
PK_CACHE_SPLIT_LOCK_DIR         := $(srctree)/package/CACHE/BiscuitOS-CACHE-SPLIT-LOCK
PK_CACHE_SPLIT_LOCK_PATCH       := $(PK_CACHE_SPLIT_LOCK_DIR)/patch
PK_CACHE_SPLIT_LOCK_BSBIT       := BiscuitOS-CACHE-SPLIT-LOCK-$(PK_CACHE_SPLIT_LOCK_VERSION).bsbit
PK_CACHE_SPLIT_LOCK_OUT         :=
PK_CACHE_SPLIT_LOCK_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_CACHE_SPLIT_LOCK_TAR         := $(CONFIG_PK_CACHE_SPLIT_LOCK_TAR)
PK_CACHE_SPLIT_LOCK_PACKAGE     :=
PK_CACHE_SPLIT_LOCK_CONFIG      := $(CONFIG_PK_CACHE_SPLIT_LOCK_CONFIG)
SUB_TARGET                  += $(PK_CACHE_SPLIT_LOCK_DIR)/build

PK_CACHE_SPLIT_LOCK_sh = $(CONFIG_SHELL) $(PK_CACHE_SPLIT_LOCK_SCRIPTS) \
                 $1X \
                 $(PK_CACHE_SPLIT_LOCK_NAME)X \
                 $(PK_CACHE_SPLIT_LOCK_VERSION)X \
                 $(PK_CACHE_SPLIT_LOCK_SITE)X \
                 $(PK_CACHE_SPLIT_LOCK_GITHUB)X \
                 $(PK_CACHE_SPLIT_LOCK_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_CACHE_SPLIT_LOCK_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_CACHE_SPLIT_LOCK_SUBNAME)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_CONFIG)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_LIBPATH)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_CPPFLAGS)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_DPKCONFIG)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_CFLAGS)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_LDFLAGS)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_CXXFLAGS)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_ASFLAGS)X \
                 $(PK_CACHE_SPLIT_LOCK_BSBIT)X \
                 $(PK_CACHE_SPLIT_LOCK_BUILDARCH)X \
		 $(PK_CACHE_SPLIT_LOCK_CSRCFILE)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_SRCFILE)X \
                 $(CONFIG_PK_CACHE_SPLIT_LOCK_CSRCFILE)

$(PK_CACHE_SPLIT_LOCK_DIR)/build: FORCE
	$(Q)$(call PK_CACHE_SPLIT_LOCK_sh,$(srctree))
