################################################
#
# BiscuitOS-MEMBLOCK-Hotplug
#
################################################
PK_MEMBLOCK_HOTPLUG_NAME        := BiscuitOS-MEMBLOCK-Hotplug
PK_MEMBLOCK_HOTPLUG_VERSION     := $(CONFIG_PK_MEMBLOCK_HOTPLUG_VERSION)
PK_MEMBLOCK_HOTPLUG_SITE        := $(CONFIG_PK_MEMBLOCK_HOTPLUG_URL)
PK_MEMBLOCK_HOTPLUG_GITHUB      := $(CONFIG_PK_MEMBLOCK_HOTPLUG_GITHUB)
PK_MEMBLOCK_HOTPLUG_SUBNAME     :=
PK_MEMBLOCK_HOTPLUG_BUILDARCH   := $(CONFIG_PK_MEMBLOCK_HOTPLUG_BUILDARCH)
PK_MEMBLOCK_HOTPLUG_DIR         := $(srctree)/package/MEMBLOCK/BiscuitOS-MEMBLOCK-Hotplug
PK_MEMBLOCK_HOTPLUG_PATCH       := $(PK_MEMBLOCK_HOTPLUG_DIR)/patch
PK_MEMBLOCK_HOTPLUG_BSBIT       := BiscuitOS-MEMBLOCK-Hotplug-$(PK_MEMBLOCK_HOTPLUG_VERSION).bsbit
PK_MEMBLOCK_HOTPLUG_OUT         :=
PK_MEMBLOCK_HOTPLUG_SCRIPTS     := $(srctree)/scripts/package/package-kernel.sh
PK_MEMBLOCK_HOTPLUG_TAR         := $(CONFIG_PK_MEMBLOCK_HOTPLUG_TAR)
PK_MEMBLOCK_HOTPLUG_PACKAGE     :=
PK_MEMBLOCK_HOTPLUG_CONFIG      := $(CONFIG_PK_MEMBLOCK_HOTPLUG_CONFIG)
SUB_TARGET                  += $(PK_MEMBLOCK_HOTPLUG_DIR)/build

PK_MEMBLOCK_HOTPLUG_sh = $(CONFIG_SHELL) $(PK_MEMBLOCK_HOTPLUG_SCRIPTS) \
                 $1X \
                 $(PK_MEMBLOCK_HOTPLUG_NAME)X \
                 $(PK_MEMBLOCK_HOTPLUG_VERSION)X \
                 $(PK_MEMBLOCK_HOTPLUG_SITE)X \
                 $(PK_MEMBLOCK_HOTPLUG_GITHUB)X \
                 $(PK_MEMBLOCK_HOTPLUG_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MEMBLOCK_HOTPLUG_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MEMBLOCK_HOTPLUG_SUBNAME)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_CONFIG)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_LIBPATH)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_CPPFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_DPKCONFIG)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_CFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_LDFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_CXXFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_ASFLAGS)X \
                 $(PK_MEMBLOCK_HOTPLUG_BSBIT)X \
                 $(PK_MEMBLOCK_HOTPLUG_BUILDARCH)X \
		 $(PK_MEMBLOCK_HOTPLUG_CSRCFILE)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_SRCFILE)X \
                 $(CONFIG_PK_MEMBLOCK_HOTPLUG_CSRCFILE)

$(PK_MEMBLOCK_HOTPLUG_DIR)/build: FORCE
	$(Q)$(call PK_MEMBLOCK_HOTPLUG_sh,$(srctree))
