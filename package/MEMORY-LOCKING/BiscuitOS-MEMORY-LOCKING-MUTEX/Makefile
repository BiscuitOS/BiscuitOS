################################################
#
# BiscuitOS-MEMORY-LOCKING-MUTEX
#
################################################
PK_MEMLOCK_MUTEX_NAME        := BiscuitOS-MEMORY-LOCKING-MUTEX
PK_MEMLOCK_MUTEX_VERSION     := $(CONFIG_PK_MEMLOCK_MUTEX_VERSION)
PK_MEMLOCK_MUTEX_SITE        := $(CONFIG_PK_MEMLOCK_MUTEX_URL)
PK_MEMLOCK_MUTEX_GITHUB      := $(CONFIG_PK_MEMLOCK_MUTEX_GITHUB)
PK_MEMLOCK_MUTEX_SUBNAME     :=
PK_MEMLOCK_MUTEX_BUILDARCH   := $(CONFIG_PK_MEMLOCK_MUTEX_BUILDARCH)
PK_MEMLOCK_MUTEX_DIR         := $(srctree)/package/MEMORY-LOCKING/BiscuitOS-MEMORY-LOCKING-MUTEX
PK_MEMLOCK_MUTEX_PATCH       := $(PK_MEMLOCK_MUTEX_DIR)/patch
PK_MEMLOCK_MUTEX_BSBIT       := BiscuitOS-MEMORY-LOCKING-MUTEX-$(PK_MEMLOCK_MUTEX_VERSION).bsbit
PK_MEMLOCK_MUTEX_OUT         :=
PK_MEMLOCK_MUTEX_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_MEMLOCK_MUTEX_TAR         := $(CONFIG_PK_MEMLOCK_MUTEX_TAR)
PK_MEMLOCK_MUTEX_PACKAGE     :=
PK_MEMLOCK_MUTEX_CONFIG      := $(CONFIG_PK_MEMLOCK_MUTEX_CONFIG)
SUB_TARGET                  += $(PK_MEMLOCK_MUTEX_DIR)/build

PK_MEMLOCK_MUTEX_sh = $(CONFIG_SHELL) $(PK_MEMLOCK_MUTEX_SCRIPTS) \
                 $1X \
                 $(PK_MEMLOCK_MUTEX_NAME)X \
                 $(PK_MEMLOCK_MUTEX_VERSION)X \
                 $(PK_MEMLOCK_MUTEX_SITE)X \
                 $(PK_MEMLOCK_MUTEX_GITHUB)X \
                 $(PK_MEMLOCK_MUTEX_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MEMLOCK_MUTEX_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MEMLOCK_MUTEX_SUBNAME)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_CONFIG)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_LIBPATH)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_CPPFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_DPKCONFIG)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_CFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_LDFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_CXXFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_ASFLAGS)X \
                 $(PK_MEMLOCK_MUTEX_BSBIT)X \
                 $(PK_MEMLOCK_MUTEX_BUILDARCH)X \
		 $(PK_MEMLOCK_MUTEX_CSRCFILE)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_SRCFILE)X \
                 $(CONFIG_PK_MEMLOCK_MUTEX_CSRCFILE)

$(PK_MEMLOCK_MUTEX_DIR)/build: FORCE
	$(Q)$(call PK_MEMLOCK_MUTEX_sh,$(srctree))
