################################################
#
# BiscuitOS-MEMORY-LOCKING-SPINLOCK
#
################################################
PK_MEMLOCK_SPINLOCK_NAME        := BiscuitOS-MEMORY-LOCKING-SPINLOCK
PK_MEMLOCK_SPINLOCK_VERSION     := $(CONFIG_PK_MEMLOCK_SPINLOCK_VERSION)
PK_MEMLOCK_SPINLOCK_SITE        := $(CONFIG_PK_MEMLOCK_SPINLOCK_URL)
PK_MEMLOCK_SPINLOCK_GITHUB      := $(CONFIG_PK_MEMLOCK_SPINLOCK_GITHUB)
PK_MEMLOCK_SPINLOCK_SUBNAME     :=
PK_MEMLOCK_SPINLOCK_BUILDARCH   := $(CONFIG_PK_MEMLOCK_SPINLOCK_BUILDARCH)
PK_MEMLOCK_SPINLOCK_DIR         := $(srctree)/package/MEMORY-LOCKING/BiscuitOS-MEMORY-LOCKING-SPINLOCK
PK_MEMLOCK_SPINLOCK_PATCH       := $(PK_MEMLOCK_SPINLOCK_DIR)/patch
PK_MEMLOCK_SPINLOCK_BSBIT       := BiscuitOS-MEMORY-LOCKING-SPINLOCK-$(PK_MEMLOCK_SPINLOCK_VERSION).bsbit
PK_MEMLOCK_SPINLOCK_OUT         :=
PK_MEMLOCK_SPINLOCK_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_MEMLOCK_SPINLOCK_TAR         := $(CONFIG_PK_MEMLOCK_SPINLOCK_TAR)
PK_MEMLOCK_SPINLOCK_PACKAGE     :=
PK_MEMLOCK_SPINLOCK_CONFIG      := $(CONFIG_PK_MEMLOCK_SPINLOCK_CONFIG)
SUB_TARGET                  += $(PK_MEMLOCK_SPINLOCK_DIR)/build

PK_MEMLOCK_SPINLOCK_sh = $(CONFIG_SHELL) $(PK_MEMLOCK_SPINLOCK_SCRIPTS) \
                 $1X \
                 $(PK_MEMLOCK_SPINLOCK_NAME)X \
                 $(PK_MEMLOCK_SPINLOCK_VERSION)X \
                 $(PK_MEMLOCK_SPINLOCK_SITE)X \
                 $(PK_MEMLOCK_SPINLOCK_GITHUB)X \
                 $(PK_MEMLOCK_SPINLOCK_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MEMLOCK_SPINLOCK_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MEMLOCK_SPINLOCK_SUBNAME)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_CONFIG)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_LIBPATH)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_CPPFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_DPKCONFIG)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_CFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_LDFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_CXXFLAGS)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_ASFLAGS)X \
                 $(PK_MEMLOCK_SPINLOCK_BSBIT)X \
                 $(PK_MEMLOCK_SPINLOCK_BUILDARCH)X \
		 $(PK_MEMLOCK_SPINLOCK_CSRCFILE)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_SRCFILE)X \
                 $(CONFIG_PK_MEMLOCK_SPINLOCK_CSRCFILE)

$(PK_MEMLOCK_SPINLOCK_DIR)/build: FORCE
	$(Q)$(call PK_MEMLOCK_SPINLOCK_sh,$(srctree))
