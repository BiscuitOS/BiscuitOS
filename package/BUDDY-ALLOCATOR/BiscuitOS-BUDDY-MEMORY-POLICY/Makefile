PK_BUDDY_MEMORY_POLICY_NAME        := BiscuitOS-BUDDY-MEMORY-POLICY
PK_BUDDY_MEMORY_POLICY_VERSION     := $(CONFIG_PK_BUDDY_MEMORY_POLICY_VERSION)
PK_BUDDY_MEMORY_POLICY_SITE        := $(CONFIG_PK_BUDDY_MEMORY_POLICY_URL)
PK_BUDDY_MEMORY_POLICY_GITHUB      := $(CONFIG_PK_BUDDY_MEMORY_POLICY_GITHUB)
PK_BUDDY_MEMORY_POLICY_SUBNAME     :=
PK_BUDDY_MEMORY_POLICY_BUILDARCH   := $(CONFIG_PK_BUDDY_MEMORY_POLICY_BUILDARCH)
PK_BUDDY_MEMORY_POLICY_DIR         := $(srctree)/package/BUDDY-ALLOCATOR/BiscuitOS-BUDDY-MEMORY-POLICY
PK_BUDDY_MEMORY_POLICY_PATCH       := $(PK_BUDDY_MEMORY_POLICY_DIR)/patch
PK_BUDDY_MEMORY_POLICY_BSBIT       := BiscuitOS-BUDDY-MEMORY-POLICY-$(PK_BUDDY_MEMORY_POLICY_VERSION).bsbit
PK_BUDDY_MEMORY_POLICY_OUT         :=
PK_BUDDY_MEMORY_POLICY_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_BUDDY_MEMORY_POLICY_TAR         := $(CONFIG_PK_BUDDY_MEMORY_POLICY_TAR)
PK_BUDDY_MEMORY_POLICY_PACKAGE     :=
PK_BUDDY_MEMORY_POLICY_CONFIG      := $(CONFIG_PK_BUDDY_MEMORY_POLICY_CONFIG)
SUB_TARGET                  += $(PK_BUDDY_MEMORY_POLICY_DIR)/build

PK_BUDDY_MEMORY_POLICY_sh = $(CONFIG_SHELL) $(PK_BUDDY_MEMORY_POLICY_SCRIPTS) \
                 $1X \
                 $(PK_BUDDY_MEMORY_POLICY_NAME)X \
                 $(PK_BUDDY_MEMORY_POLICY_VERSION)X \
                 $(PK_BUDDY_MEMORY_POLICY_SITE)X \
                 $(PK_BUDDY_MEMORY_POLICY_GITHUB)X \
                 $(PK_BUDDY_MEMORY_POLICY_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_BUDDY_MEMORY_POLICY_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_BUDDY_MEMORY_POLICY_SUBNAME)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_CONFIG)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_LIBPATH)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_CPPFLAGS)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_DPKCONFIG)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_CFLAGS)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_LDFLAGS)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_CXXFLAGS)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_ASFLAGS)X \
                 $(PK_BUDDY_MEMORY_POLICY_BSBIT)X \
                 $(PK_BUDDY_MEMORY_POLICY_BUILDARCH)X \
		 $(PK_BUDDY_MEMORY_POLICY_CSRCFILE)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_SRCFILE)X \
                 $(CONFIG_PK_BUDDY_MEMORY_POLICY_CSRCFILE)

$(PK_BUDDY_MEMORY_POLICY_DIR)/build: FORCE
	$(Q)$(call PK_BUDDY_MEMORY_POLICY_sh,$(srctree))
