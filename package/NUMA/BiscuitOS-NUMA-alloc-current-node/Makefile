################################################
#
# BiscuitOS-NUMA-alloc-current-node
#
################################################
PK_NUMA_ALLOC_CURNODE_NAME        := BiscuitOS-NUMA-alloc-current-node
PK_NUMA_ALLOC_CURNODE_VERSION     := $(CONFIG_PK_NUMA_ALLOC_CURNODE_VERSION)
PK_NUMA_ALLOC_CURNODE_SITE        := $(CONFIG_PK_NUMA_ALLOC_CURNODE_URL)
PK_NUMA_ALLOC_CURNODE_GITHUB      := $(CONFIG_PK_NUMA_ALLOC_CURNODE_GITHUB)
PK_NUMA_ALLOC_CURNODE_SUBNAME     :=
PK_NUMA_ALLOC_CURNODE_BUILDARCH   := $(CONFIG_PK_NUMA_ALLOC_CURNODE_BUILDARCH)
PK_NUMA_ALLOC_CURNODE_DIR         := $(srctree)/package/NUMA/BiscuitOS-NUMA-alloc-current-node
PK_NUMA_ALLOC_CURNODE_PATCH       := $(PK_NUMA_ALLOC_CURNODE_DIR)/patch
PK_NUMA_ALLOC_CURNODE_BSBIT       := BiscuitOS-NUMA-alloc-current-node-$(PK_NUMA_ALLOC_CURNODE_VERSION).bsbit
PK_NUMA_ALLOC_CURNODE_OUT         :=
PK_NUMA_ALLOC_CURNODE_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_NUMA_ALLOC_CURNODE_TAR         := $(CONFIG_PK_NUMA_ALLOC_CURNODE_TAR)
PK_NUMA_ALLOC_CURNODE_PACKAGE     :=
PK_NUMA_ALLOC_CURNODE_CONFIG      := $(CONFIG_PK_NUMA_ALLOC_CURNODE_CONFIG)
SUB_TARGET                  += $(PK_NUMA_ALLOC_CURNODE_DIR)/build

PK_NUMA_ALLOC_CURNODE_sh = $(CONFIG_SHELL) $(PK_NUMA_ALLOC_CURNODE_SCRIPTS) \
                 $1X \
                 $(PK_NUMA_ALLOC_CURNODE_NAME)X \
                 $(PK_NUMA_ALLOC_CURNODE_VERSION)X \
                 $(PK_NUMA_ALLOC_CURNODE_SITE)X \
                 $(PK_NUMA_ALLOC_CURNODE_GITHUB)X \
                 $(PK_NUMA_ALLOC_CURNODE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_NUMA_ALLOC_CURNODE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_NUMA_ALLOC_CURNODE_SUBNAME)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_CONFIG)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_LIBPATH)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_CPPFLAGS)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_DPKCONFIG)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_CFLAGS)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_LDFLAGS)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_CXXFLAGS)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_ASFLAGS)X \
                 $(PK_NUMA_ALLOC_CURNODE_BSBIT)X \
                 $(PK_NUMA_ALLOC_CURNODE_BUILDARCH)X \
		 $(PK_NUMA_ALLOC_CURNODE_CSRCFILE)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_SRCFILE)X \
                 $(CONFIG_PK_NUMA_ALLOC_CURNODE_CSRCFILE)

$(PK_NUMA_ALLOC_CURNODE_DIR)/build: FORCE
	$(Q)$(call PK_NUMA_ALLOC_CURNODE_sh,$(srctree))
