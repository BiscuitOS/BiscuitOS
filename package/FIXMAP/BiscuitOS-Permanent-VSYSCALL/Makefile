################################################
#
# BiscuitOS-Permanent-VSYSCALL
#
################################################
PK_PERMANENT_VSYSCALL_NAME        := BiscuitOS-Permanent-VSYSCALL
PK_PERMANENT_VSYSCALL_VERSION     := $(CONFIG_PK_PERMANENT_VSYSCALL_VERSION)
PK_PERMANENT_VSYSCALL_SITE        := $(CONFIG_PK_PERMANENT_VSYSCALL_URL)
PK_PERMANENT_VSYSCALL_GITHUB      := $(CONFIG_PK_PERMANENT_VSYSCALL_GITHUB)
PK_PERMANENT_VSYSCALL_SUBNAME     :=
PK_PERMANENT_VSYSCALL_BUILDARCH   := $(CONFIG_PK_PERMANENT_VSYSCALL_BUILDARCH)
PK_PERMANENT_VSYSCALL_DIR         := $(srctree)/package/FIXMAP/BiscuitOS-Permanent-VSYSCALL
PK_PERMANENT_VSYSCALL_PATCH       := $(PK_PERMANENT_VSYSCALL_DIR)/patch
PK_PERMANENT_VSYSCALL_BSBIT       := BiscuitOS-Permanent-VSYSCALL-$(PK_PERMANENT_VSYSCALL_VERSION).bsbit
PK_PERMANENT_VSYSCALL_OUT         :=
PK_PERMANENT_VSYSCALL_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_PERMANENT_VSYSCALL_TAR         := $(CONFIG_PK_PERMANENT_VSYSCALL_TAR)
PK_PERMANENT_VSYSCALL_PACKAGE     :=
PK_PERMANENT_VSYSCALL_CONFIG      := $(CONFIG_PK_PERMANENT_VSYSCALL_CONFIG)
SUB_TARGET                  += $(PK_PERMANENT_VSYSCALL_DIR)/build

PK_PERMANENT_VSYSCALL_sh = $(CONFIG_SHELL) $(PK_PERMANENT_VSYSCALL_SCRIPTS) \
                 $1X \
                 $(PK_PERMANENT_VSYSCALL_NAME)X \
                 $(PK_PERMANENT_VSYSCALL_VERSION)X \
                 $(PK_PERMANENT_VSYSCALL_SITE)X \
                 $(PK_PERMANENT_VSYSCALL_GITHUB)X \
                 $(PK_PERMANENT_VSYSCALL_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_PERMANENT_VSYSCALL_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_PERMANENT_VSYSCALL_SUBNAME)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_CONFIG)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_LIBPATH)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_CPPFLAGS)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_DPKCONFIG)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_CFLAGS)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_LDFLAGS)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_CXXFLAGS)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_ASFLAGS)X \
                 $(PK_PERMANENT_VSYSCALL_BSBIT)X \
                 $(PK_PERMANENT_VSYSCALL_BUILDARCH)X \
		 $(PK_PERMANENT_VSYSCALL_CSRCFILE)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_SRCFILE)X \
                 $(CONFIG_PK_PERMANENT_VSYSCALL_CSRCFILE)

$(PK_PERMANENT_VSYSCALL_DIR)/build: FORCE
	$(Q)$(call PK_PERMANENT_VSYSCALL_sh,$(srctree))
