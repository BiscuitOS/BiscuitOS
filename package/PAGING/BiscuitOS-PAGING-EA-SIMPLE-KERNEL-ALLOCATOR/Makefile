# BiscuitOS-PAGING-EA-SIMPLE-KERNEL-ALLOCATOR
#
################################################
PK_PAGING_EA_SIMPLE_KALLOCATOR_NAME        := BiscuitOS-PAGING-EA-SIMPLE-KERNEL-ALLOCATOR
PK_PAGING_EA_SIMPLE_KALLOCATOR_VERSION     := $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_VERSION)
PK_PAGING_EA_SIMPLE_KALLOCATOR_SITE        := $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_URL)
PK_PAGING_EA_SIMPLE_KALLOCATOR_GITHUB      := $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_GITHUB)
PK_PAGING_EA_SIMPLE_KALLOCATOR_SUBNAME     :=
PK_PAGING_EA_SIMPLE_KALLOCATOR_BUILDARCH   := $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_BUILDARCH)
PK_PAGING_EA_SIMPLE_KALLOCATOR_DIR         := $(srctree)/package/PAGING/BiscuitOS-PAGING-EA-SIMPLE-KERNEL-ALLOCATOR
PK_PAGING_EA_SIMPLE_KALLOCATOR_PATCH       := $(PK_PAGING_EA_SIMPLE_KALLOCATOR_DIR)/patch
PK_PAGING_EA_SIMPLE_KALLOCATOR_BSBIT       := BiscuitOS-PAGING-EA-SIMPLE-KERNEL-ALLOCATOR-$(PK_PAGING_EA_SIMPLE_KALLOCATOR_VERSION).bsbit
PK_PAGING_EA_SIMPLE_KALLOCATOR_OUT         :=
PK_PAGING_EA_SIMPLE_KALLOCATOR_SCRIPTS     := $(srctree)/scripts/package/package-kernel.sh
PK_PAGING_EA_SIMPLE_KALLOCATOR_TAR         := $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_TAR)
PK_PAGING_EA_SIMPLE_KALLOCATOR_PACKAGE     :=
PK_PAGING_EA_SIMPLE_KALLOCATOR_CONFIG      := $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_CONFIG)
SUB_TARGET                  += $(PK_PAGING_EA_SIMPLE_KALLOCATOR_DIR)/build

PK_PAGING_EA_SIMPLE_KALLOCATOR_sh = $(CONFIG_SHELL) $(PK_PAGING_EA_SIMPLE_KALLOCATOR_SCRIPTS) \
                 $1X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_NAME)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_VERSION)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_SITE)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_GITHUB)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_SUBNAME)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_CONFIG)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_LIBPATH)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_CPPFLAGS)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_DPKCONFIG)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_CFLAGS)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_LDFLAGS)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_CXXFLAGS)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_ASFLAGS)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_BSBIT)X \
                 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_BUILDARCH)X \
		 $(PK_PAGING_EA_SIMPLE_KALLOCATOR_CSRCFILE)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_SRCFILE)X \
                 $(CONFIG_PK_PAGING_EA_SIMPLE_KALLOCATOR_CSRCFILE)

$(PK_PAGING_EA_SIMPLE_KALLOCATOR_DIR)/build: FORCE
	$(Q)$(call PK_PAGING_EA_SIMPLE_KALLOCATOR_sh,$(srctree))
