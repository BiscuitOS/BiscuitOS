################################################
#
# BiscuitOS-PAGING-MMIO-MAPPING
#
################################################
PK_PAGING_MMIO_MAPPING_NAME        := BiscuitOS-PAGING-MMIO-MAPPING
PK_PAGING_MMIO_MAPPING_VERSION     := $(CONFIG_PK_PAGING_MMIO_MAPPING_VERSION)
PK_PAGING_MMIO_MAPPING_SITE        := $(CONFIG_PK_PAGING_MMIO_MAPPING_URL)
PK_PAGING_MMIO_MAPPING_GITHUB      := $(CONFIG_PK_PAGING_MMIO_MAPPING_GITHUB)
PK_PAGING_MMIO_MAPPING_SUBNAME     :=
PK_PAGING_MMIO_MAPPING_BUILDARCH   := $(CONFIG_PK_PAGING_MMIO_MAPPING_BUILDARCH)
PK_PAGING_MMIO_MAPPING_DIR         := $(srctree)/package/PAGING/BiscuitOS-PAGING-MMIO-MAPPING
PK_PAGING_MMIO_MAPPING_PATCH       := $(PK_PAGING_MMIO_MAPPING_DIR)/patch
PK_PAGING_MMIO_MAPPING_BSBIT       := BiscuitOS-PAGING-MMIO-MAPPING-$(PK_PAGING_MMIO_MAPPING_VERSION).bsbit
PK_PAGING_MMIO_MAPPING_OUT         :=
PK_PAGING_MMIO_MAPPING_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_PAGING_MMIO_MAPPING_TAR         := $(CONFIG_PK_PAGING_MMIO_MAPPING_TAR)
PK_PAGING_MMIO_MAPPING_PACKAGE     :=
PK_PAGING_MMIO_MAPPING_CONFIG      := $(CONFIG_PK_PAGING_MMIO_MAPPING_CONFIG)
SUB_TARGET                  += $(PK_PAGING_MMIO_MAPPING_DIR)/build

PK_PAGING_MMIO_MAPPING_sh = $(CONFIG_SHELL) $(PK_PAGING_MMIO_MAPPING_SCRIPTS) \
                 $1X \
                 $(PK_PAGING_MMIO_MAPPING_NAME)X \
                 $(PK_PAGING_MMIO_MAPPING_VERSION)X \
                 $(PK_PAGING_MMIO_MAPPING_SITE)X \
                 $(PK_PAGING_MMIO_MAPPING_GITHUB)X \
                 $(PK_PAGING_MMIO_MAPPING_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_PAGING_MMIO_MAPPING_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_PAGING_MMIO_MAPPING_SUBNAME)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_CONFIG)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_LIBPATH)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_CPPFLAGS)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_DPKCONFIG)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_CFLAGS)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_LDFLAGS)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_CXXFLAGS)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_ASFLAGS)X \
                 $(PK_PAGING_MMIO_MAPPING_BSBIT)X \
                 $(PK_PAGING_MMIO_MAPPING_BUILDARCH)X \
		 $(PK_PAGING_MMIO_MAPPING_CSRCFILE)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_SRCFILE)X \
                 $(CONFIG_PK_PAGING_MMIO_MAPPING_CSRCFILE)

$(PK_PAGING_MMIO_MAPPING_DIR)/build: FORCE
	$(Q)$(call PK_PAGING_MMIO_MAPPING_sh,$(srctree))
