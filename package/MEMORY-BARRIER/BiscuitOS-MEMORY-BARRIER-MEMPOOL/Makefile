################################################
#
# BiscuitOS-MEMORY-BARRIER-MEMPOOL
#
################################################
PK_MEMBARRIER_MEMPOOL_NAME        := BiscuitOS-MEMORY-BARRIER-MEMPOOL
PK_MEMBARRIER_MEMPOOL_VERSION     := $(CONFIG_PK_MEMBARRIER_MEMPOOL_VERSION)
PK_MEMBARRIER_MEMPOOL_SITE        := $(CONFIG_PK_MEMBARRIER_MEMPOOL_URL)
PK_MEMBARRIER_MEMPOOL_GITHUB      := $(CONFIG_PK_MEMBARRIER_MEMPOOL_GITHUB)
PK_MEMBARRIER_MEMPOOL_SUBNAME     :=
PK_MEMBARRIER_MEMPOOL_BUILDARCH   := $(CONFIG_PK_MEMBARRIER_MEMPOOL_BUILDARCH)
PK_MEMBARRIER_MEMPOOL_DIR         := $(srctree)/package/MEMORY-BARRIER/BiscuitOS-MEMORY-BARRIER-MEMPOOL
PK_MEMBARRIER_MEMPOOL_PATCH       := $(PK_MEMBARRIER_MEMPOOL_DIR)/patch
PK_MEMBARRIER_MEMPOOL_BSBIT       := BiscuitOS-MEMORY-BARRIER-MEMPOOL-$(PK_MEMBARRIER_MEMPOOL_VERSION).bsbit
PK_MEMBARRIER_MEMPOOL_OUT         :=
PK_MEMBARRIER_MEMPOOL_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_MEMBARRIER_MEMPOOL_TAR         := $(CONFIG_PK_MEMBARRIER_MEMPOOL_TAR)
PK_MEMBARRIER_MEMPOOL_PACKAGE     :=
PK_MEMBARRIER_MEMPOOL_CONFIG      := $(CONFIG_PK_MEMBARRIER_MEMPOOL_CONFIG)
SUB_TARGET                  += $(PK_MEMBARRIER_MEMPOOL_DIR)/build

PK_MEMBARRIER_MEMPOOL_sh = $(CONFIG_SHELL) $(PK_MEMBARRIER_MEMPOOL_SCRIPTS) \
                 $1X \
                 $(PK_MEMBARRIER_MEMPOOL_NAME)X \
                 $(PK_MEMBARRIER_MEMPOOL_VERSION)X \
                 $(PK_MEMBARRIER_MEMPOOL_SITE)X \
                 $(PK_MEMBARRIER_MEMPOOL_GITHUB)X \
                 $(PK_MEMBARRIER_MEMPOOL_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MEMBARRIER_MEMPOOL_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MEMBARRIER_MEMPOOL_SUBNAME)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_CONFIG)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_LIBPATH)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_CPPFLAGS)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_DPKCONFIG)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_CFLAGS)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_LDFLAGS)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_CXXFLAGS)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_ASFLAGS)X \
                 $(PK_MEMBARRIER_MEMPOOL_BSBIT)X \
                 $(PK_MEMBARRIER_MEMPOOL_BUILDARCH)X \
		 $(PK_MEMBARRIER_MEMPOOL_CSRCFILE)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_SRCFILE)X \
                 $(CONFIG_PK_MEMBARRIER_MEMPOOL_CSRCFILE)

$(PK_MEMBARRIER_MEMPOOL_DIR)/build: FORCE
	$(Q)$(call PK_MEMBARRIER_MEMPOOL_sh,$(srctree))
