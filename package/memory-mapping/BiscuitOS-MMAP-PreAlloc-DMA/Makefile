################################################
#
# BiscuitOS-MMAP-PreAlloc-DMA
#
################################################
PK_MMAP_PREALLOC_DMA_NAME        := BiscuitOS-MMAP-PreAlloc-DMA
PK_MMAP_PREALLOC_DMA_VERSION     := $(CONFIG_PK_MMAP_PREALLOC_DMA_VERSION)
PK_MMAP_PREALLOC_DMA_SITE        := $(CONFIG_PK_MMAP_PREALLOC_DMA_URL)
PK_MMAP_PREALLOC_DMA_GITHUB      := $(CONFIG_PK_MMAP_PREALLOC_DMA_GITHUB)
PK_MMAP_PREALLOC_DMA_SUBNAME     :=
PK_MMAP_PREALLOC_DMA_BUILDARCH   := $(CONFIG_PK_MMAP_PREALLOC_DMA_BUILDARCH)
PK_MMAP_PREALLOC_DMA_DIR         := $(srctree)/package/memory-mapping/BiscuitOS-MMAP-PreAlloc-DMA
PK_MMAP_PREALLOC_DMA_PATCH       := $(PK_MMAP_PREALLOC_DMA_DIR)/patch
PK_MMAP_PREALLOC_DMA_BSBIT       := BiscuitOS-MMAP-PreAlloc-DMA-$(PK_MMAP_PREALLOC_DMA_VERSION).bsbit
PK_MMAP_PREALLOC_DMA_OUT         :=
PK_MMAP_PREALLOC_DMA_SCRIPTS     := $(srctree)/scripts/package/package-kernel.sh
PK_MMAP_PREALLOC_DMA_TAR         := $(CONFIG_PK_MMAP_PREALLOC_DMA_TAR)
PK_MMAP_PREALLOC_DMA_PACKAGE     :=
PK_MMAP_PREALLOC_DMA_CONFIG      := $(CONFIG_PK_MMAP_PREALLOC_DMA_CONFIG)
SUB_TARGET                  += $(PK_MMAP_PREALLOC_DMA_DIR)/build

PK_MMAP_PREALLOC_DMA_sh = $(CONFIG_SHELL) $(PK_MMAP_PREALLOC_DMA_SCRIPTS) \
                 $1X \
                 $(PK_MMAP_PREALLOC_DMA_NAME)X \
                 $(PK_MMAP_PREALLOC_DMA_VERSION)X \
                 $(PK_MMAP_PREALLOC_DMA_SITE)X \
                 $(PK_MMAP_PREALLOC_DMA_GITHUB)X \
                 $(PK_MMAP_PREALLOC_DMA_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MMAP_PREALLOC_DMA_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MMAP_PREALLOC_DMA_SUBNAME)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_CONFIG)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_LIBPATH)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_CPPFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_DPKCONFIG)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_CFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_LDFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_CXXFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_ASFLAGS)X \
                 $(PK_MMAP_PREALLOC_DMA_BSBIT)X \
                 $(PK_MMAP_PREALLOC_DMA_BUILDARCH)X \
		 $(PK_MMAP_PREALLOC_DMA_CSRCFILE)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_SRCFILE)X \
                 $(CONFIG_PK_MMAP_PREALLOC_DMA_CSRCFILE)

$(PK_MMAP_PREALLOC_DMA_DIR)/build: FORCE
	$(Q)$(call PK_MMAP_PREALLOC_DMA_sh,$(srctree))
