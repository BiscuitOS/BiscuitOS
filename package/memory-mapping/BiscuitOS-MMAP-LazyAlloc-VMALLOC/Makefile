PK_MMAP_LAZYALLOC_VMALLOC_NAME        := BiscuitOS-MMAP-LazyAlloc-VMALLOC
PK_MMAP_LAZYALLOC_VMALLOC_VERSION     := $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_VERSION)
PK_MMAP_LAZYALLOC_VMALLOC_SITE        := $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_URL)
PK_MMAP_LAZYALLOC_VMALLOC_GITHUB      := $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_GITHUB)
PK_MMAP_LAZYALLOC_VMALLOC_SUBNAME     :=
PK_MMAP_LAZYALLOC_VMALLOC_BUILDARCH   := $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_BUILDARCH)
PK_MMAP_LAZYALLOC_VMALLOC_DIR         := $(srctree)/package/memory-mapping/BiscuitOS-MMAP-LazyAlloc-VMALLOC
PK_MMAP_LAZYALLOC_VMALLOC_PATCH       := $(PK_MMAP_LAZYALLOC_VMALLOC_DIR)/patch
PK_MMAP_LAZYALLOC_VMALLOC_BSBIT       := BiscuitOS-MMAP-LazyAlloc-VMALLOC-$(PK_MMAP_LAZYALLOC_VMALLOC_VERSION).bsbit
PK_MMAP_LAZYALLOC_VMALLOC_OUT         :=
PK_MMAP_LAZYALLOC_VMALLOC_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_MMAP_LAZYALLOC_VMALLOC_TAR         := $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_TAR)
PK_MMAP_LAZYALLOC_VMALLOC_PACKAGE     :=
PK_MMAP_LAZYALLOC_VMALLOC_CONFIG      := $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_CONFIG)
SUB_TARGET                  += $(PK_MMAP_LAZYALLOC_VMALLOC_DIR)/build

PK_MMAP_LAZYALLOC_VMALLOC_sh = $(CONFIG_SHELL) $(PK_MMAP_LAZYALLOC_VMALLOC_SCRIPTS) \
                 $1X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_NAME)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_VERSION)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_SITE)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_GITHUB)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_SUBNAME)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_CONFIG)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_LIBPATH)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_CPPFLAGS)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_DPKCONFIG)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_CFLAGS)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_LDFLAGS)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_CXXFLAGS)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_ASFLAGS)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_BSBIT)X \
                 $(PK_MMAP_LAZYALLOC_VMALLOC_BUILDARCH)X \
		 $(PK_MMAP_LAZYALLOC_VMALLOC_CSRCFILE)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_SRCFILE)X \
                 $(CONFIG_PK_MMAP_LAZYALLOC_VMALLOC_CSRCFILE)

$(PK_MMAP_LAZYALLOC_VMALLOC_DIR)/build: FORCE
	$(Q)$(call PK_MMAP_LAZYALLOC_VMALLOC_sh,$(srctree))
