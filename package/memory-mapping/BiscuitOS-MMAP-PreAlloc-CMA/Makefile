################################################
#
# BiscuitOS-MMAP-PreAlloc-CMA
#
################################################
PK_MMAP_PREALLOC_CMA_NAME        := BiscuitOS-MMAP-PreAlloc-CMA
PK_MMAP_PREALLOC_CMA_VERSION     := $(CONFIG_PK_MMAP_PREALLOC_CMA_VERSION)
PK_MMAP_PREALLOC_CMA_SITE        := $(CONFIG_PK_MMAP_PREALLOC_CMA_URL)
PK_MMAP_PREALLOC_CMA_GITHUB      := $(CONFIG_PK_MMAP_PREALLOC_CMA_GITHUB)
PK_MMAP_PREALLOC_CMA_SUBNAME     :=
PK_MMAP_PREALLOC_CMA_BUILDARCH   := $(CONFIG_PK_MMAP_PREALLOC_CMA_BUILDARCH)
PK_MMAP_PREALLOC_CMA_DIR         := $(srctree)/package/memory-mapping/BiscuitOS-MMAP-PreAlloc-CMA
PK_MMAP_PREALLOC_CMA_PATCH       := $(PK_MMAP_PREALLOC_CMA_DIR)/patch
PK_MMAP_PREALLOC_CMA_BSBIT       := BiscuitOS-MMAP-PreAlloc-CMA-$(PK_MMAP_PREALLOC_CMA_VERSION).bsbit
PK_MMAP_PREALLOC_CMA_OUT         :=
PK_MMAP_PREALLOC_CMA_SCRIPTS     := $(srctree)/scripts/package/package-kernel.sh
PK_MMAP_PREALLOC_CMA_TAR         := $(CONFIG_PK_MMAP_PREALLOC_CMA_TAR)
PK_MMAP_PREALLOC_CMA_PACKAGE     :=
PK_MMAP_PREALLOC_CMA_CONFIG      := $(CONFIG_PK_MMAP_PREALLOC_CMA_CONFIG)
SUB_TARGET                  += $(PK_MMAP_PREALLOC_CMA_DIR)/build

PK_MMAP_PREALLOC_CMA_sh = $(CONFIG_SHELL) $(PK_MMAP_PREALLOC_CMA_SCRIPTS) \
                 $1X \
                 $(PK_MMAP_PREALLOC_CMA_NAME)X \
                 $(PK_MMAP_PREALLOC_CMA_VERSION)X \
                 $(PK_MMAP_PREALLOC_CMA_SITE)X \
                 $(PK_MMAP_PREALLOC_CMA_GITHUB)X \
                 $(PK_MMAP_PREALLOC_CMA_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MMAP_PREALLOC_CMA_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MMAP_PREALLOC_CMA_SUBNAME)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_CONFIG)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_LIBPATH)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_CPPFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_DPKCONFIG)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_CFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_LDFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_CXXFLAGS)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_ASFLAGS)X \
                 $(PK_MMAP_PREALLOC_CMA_BSBIT)X \
                 $(PK_MMAP_PREALLOC_CMA_BUILDARCH)X \
		 $(PK_MMAP_PREALLOC_CMA_CSRCFILE)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_SRCFILE)X \
                 $(CONFIG_PK_MMAP_PREALLOC_CMA_CSRCFILE)

$(PK_MMAP_PREALLOC_CMA_DIR)/build: FORCE
	$(Q)$(call PK_MMAP_PREALLOC_CMA_sh,$(srctree))
