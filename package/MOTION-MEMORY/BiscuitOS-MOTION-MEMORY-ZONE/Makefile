################################################
#
# BiscuitOS-MOTION-MEMORY-ZONE
#
################################################
PK_MOTION_MEMORY_ZONE_NAME        := BiscuitOS-MOTION-MEMORY-ZONE
PK_MOTION_MEMORY_ZONE_VERSION     := $(CONFIG_PK_MOTION_MEMORY_ZONE_VERSION)
PK_MOTION_MEMORY_ZONE_SITE        := $(CONFIG_PK_MOTION_MEMORY_ZONE_URL)
PK_MOTION_MEMORY_ZONE_GITHUB      := $(CONFIG_PK_MOTION_MEMORY_ZONE_GITHUB)
PK_MOTION_MEMORY_ZONE_SUBNAME     :=
PK_MOTION_MEMORY_ZONE_BUILDARCH   := $(CONFIG_PK_MOTION_MEMORY_ZONE_BUILDARCH)
PK_MOTION_MEMORY_ZONE_DIR         := $(srctree)/package/MOTION-MEMORY/BiscuitOS-MOTION-MEMORY-ZONE
PK_MOTION_MEMORY_ZONE_PATCH       := $(PK_MOTION_MEMORY_ZONE_DIR)/patch
PK_MOTION_MEMORY_ZONE_BSBIT       := BiscuitOS-MOTION-MEMORY-ZONE-$(PK_MOTION_MEMORY_ZONE_VERSION).bsbit
PK_MOTION_MEMORY_ZONE_OUT         :=
PK_MOTION_MEMORY_ZONE_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_MOTION_MEMORY_ZONE_TAR         := $(CONFIG_PK_MOTION_MEMORY_ZONE_TAR)
PK_MOTION_MEMORY_ZONE_PACKAGE     :=
PK_MOTION_MEMORY_ZONE_CONFIG      := $(CONFIG_PK_MOTION_MEMORY_ZONE_CONFIG)
SUB_TARGET                  += $(PK_MOTION_MEMORY_ZONE_DIR)/build

PK_MOTION_MEMORY_ZONE_sh = $(CONFIG_SHELL) $(PK_MOTION_MEMORY_ZONE_SCRIPTS) \
                 $1X \
                 $(PK_MOTION_MEMORY_ZONE_NAME)X \
                 $(PK_MOTION_MEMORY_ZONE_VERSION)X \
                 $(PK_MOTION_MEMORY_ZONE_SITE)X \
                 $(PK_MOTION_MEMORY_ZONE_GITHUB)X \
                 $(PK_MOTION_MEMORY_ZONE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MOTION_MEMORY_ZONE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MOTION_MEMORY_ZONE_SUBNAME)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_CONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_LIBPATH)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_CPPFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_DPKCONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_CFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_LDFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_CXXFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_ASFLAGS)X \
                 $(PK_MOTION_MEMORY_ZONE_BSBIT)X \
                 $(PK_MOTION_MEMORY_ZONE_BUILDARCH)X \
		 $(PK_MOTION_MEMORY_ZONE_CSRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_SRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_ZONE_CSRCFILE)

$(PK_MOTION_MEMORY_ZONE_DIR)/build: FORCE
	$(Q)$(call PK_MOTION_MEMORY_ZONE_sh,$(srctree))
