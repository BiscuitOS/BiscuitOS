################################################
#
# BiscuitOS-MOTION-MEMORY-ONDEMAND
#
################################################
PK_MOTION_MEMORY_ONDEMAND_NAME        := BiscuitOS-MOTION-MEMORY-ONDEMAND
PK_MOTION_MEMORY_ONDEMAND_VERSION     := $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_VERSION)
PK_MOTION_MEMORY_ONDEMAND_SITE        := $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_URL)
PK_MOTION_MEMORY_ONDEMAND_GITHUB      := $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_GITHUB)
PK_MOTION_MEMORY_ONDEMAND_SUBNAME     :=
PK_MOTION_MEMORY_ONDEMAND_BUILDARCH   := $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_BUILDARCH)
PK_MOTION_MEMORY_ONDEMAND_DIR         := $(srctree)/package/MOTION-MEMORY/BiscuitOS-MOTION-MEMORY-ONDEMAND
PK_MOTION_MEMORY_ONDEMAND_PATCH       := $(PK_MOTION_MEMORY_ONDEMAND_DIR)/patch
PK_MOTION_MEMORY_ONDEMAND_BSBIT       := BiscuitOS-MOTION-MEMORY-ONDEMAND-$(PK_MOTION_MEMORY_ONDEMAND_VERSION).bsbit
PK_MOTION_MEMORY_ONDEMAND_OUT         :=
PK_MOTION_MEMORY_ONDEMAND_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_MOTION_MEMORY_ONDEMAND_TAR         := $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_TAR)
PK_MOTION_MEMORY_ONDEMAND_PACKAGE     :=
PK_MOTION_MEMORY_ONDEMAND_CONFIG      := $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_CONFIG)
SUB_TARGET                  += $(PK_MOTION_MEMORY_ONDEMAND_DIR)/build

PK_MOTION_MEMORY_ONDEMAND_sh = $(CONFIG_SHELL) $(PK_MOTION_MEMORY_ONDEMAND_SCRIPTS) \
                 $1X \
                 $(PK_MOTION_MEMORY_ONDEMAND_NAME)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_VERSION)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_SITE)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_GITHUB)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_SUBNAME)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_CONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_LIBPATH)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_CPPFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_DPKCONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_CFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_LDFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_CXXFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_ASFLAGS)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_BSBIT)X \
                 $(PK_MOTION_MEMORY_ONDEMAND_BUILDARCH)X \
		 $(PK_MOTION_MEMORY_ONDEMAND_CSRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_SRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_ONDEMAND_CSRCFILE)

$(PK_MOTION_MEMORY_ONDEMAND_DIR)/build: FORCE
	$(Q)$(call PK_MOTION_MEMORY_ONDEMAND_sh,$(srctree))
