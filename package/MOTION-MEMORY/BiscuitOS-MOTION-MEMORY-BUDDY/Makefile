################################################
#
# BiscuitOS-MOTION-MEMORY-BUDDY
#
################################################
PK_MOTION_MEMORY_BUDDY_NAME        := BiscuitOS-MOTION-MEMORY-BUDDY
PK_MOTION_MEMORY_BUDDY_VERSION     := $(CONFIG_PK_MOTION_MEMORY_BUDDY_VERSION)
PK_MOTION_MEMORY_BUDDY_SITE        := $(CONFIG_PK_MOTION_MEMORY_BUDDY_URL)
PK_MOTION_MEMORY_BUDDY_GITHUB      := $(CONFIG_PK_MOTION_MEMORY_BUDDY_GITHUB)
PK_MOTION_MEMORY_BUDDY_SUBNAME     :=
PK_MOTION_MEMORY_BUDDY_BUILDARCH   := $(CONFIG_PK_MOTION_MEMORY_BUDDY_BUILDARCH)
PK_MOTION_MEMORY_BUDDY_DIR         := $(srctree)/package/MOTION-MEMORY/BiscuitOS-MOTION-MEMORY-BUDDY
PK_MOTION_MEMORY_BUDDY_PATCH       := $(PK_MOTION_MEMORY_BUDDY_DIR)/patch
PK_MOTION_MEMORY_BUDDY_BSBIT       := BiscuitOS-MOTION-MEMORY-BUDDY-$(PK_MOTION_MEMORY_BUDDY_VERSION).bsbit
PK_MOTION_MEMORY_BUDDY_OUT         :=
PK_MOTION_MEMORY_BUDDY_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_MOTION_MEMORY_BUDDY_TAR         := $(CONFIG_PK_MOTION_MEMORY_BUDDY_TAR)
PK_MOTION_MEMORY_BUDDY_PACKAGE     :=
PK_MOTION_MEMORY_BUDDY_CONFIG      := $(CONFIG_PK_MOTION_MEMORY_BUDDY_CONFIG)
SUB_TARGET                  += $(PK_MOTION_MEMORY_BUDDY_DIR)/build

PK_MOTION_MEMORY_BUDDY_sh = $(CONFIG_SHELL) $(PK_MOTION_MEMORY_BUDDY_SCRIPTS) \
                 $1X \
                 $(PK_MOTION_MEMORY_BUDDY_NAME)X \
                 $(PK_MOTION_MEMORY_BUDDY_VERSION)X \
                 $(PK_MOTION_MEMORY_BUDDY_SITE)X \
                 $(PK_MOTION_MEMORY_BUDDY_GITHUB)X \
                 $(PK_MOTION_MEMORY_BUDDY_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MOTION_MEMORY_BUDDY_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MOTION_MEMORY_BUDDY_SUBNAME)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_CONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_LIBPATH)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_CPPFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_DPKCONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_CFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_LDFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_CXXFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_ASFLAGS)X \
                 $(PK_MOTION_MEMORY_BUDDY_BSBIT)X \
                 $(PK_MOTION_MEMORY_BUDDY_BUILDARCH)X \
		 $(PK_MOTION_MEMORY_BUDDY_CSRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_SRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_BUDDY_CSRCFILE)

$(PK_MOTION_MEMORY_BUDDY_DIR)/build: FORCE
	$(Q)$(call PK_MOTION_MEMORY_BUDDY_sh,$(srctree))
