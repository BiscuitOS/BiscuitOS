PK_MOTION_MEMORY_LAZYALLOC_NAME        := BiscuitOS-MOTION-MEMORY-LAZYALLOC
PK_MOTION_MEMORY_LAZYALLOC_VERSION     := $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_VERSION)
PK_MOTION_MEMORY_LAZYALLOC_SITE        := $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_URL)
PK_MOTION_MEMORY_LAZYALLOC_GITHUB      := $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_GITHUB)
PK_MOTION_MEMORY_LAZYALLOC_SUBNAME     :=
PK_MOTION_MEMORY_LAZYALLOC_BUILDARCH   := $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_BUILDARCH)
PK_MOTION_MEMORY_LAZYALLOC_DIR         := $(srctree)/package/MOTION-MEMORY/BiscuitOS-MOTION-MEMORY-LAZYALLOC
PK_MOTION_MEMORY_LAZYALLOC_PATCH       := $(PK_MOTION_MEMORY_LAZYALLOC_DIR)/patch
PK_MOTION_MEMORY_LAZYALLOC_BSBIT       := BiscuitOS-MOTION-MEMORY-LAZYALLOC-$(PK_MOTION_MEMORY_LAZYALLOC_VERSION).bsbit
PK_MOTION_MEMORY_LAZYALLOC_OUT         :=
PK_MOTION_MEMORY_LAZYALLOC_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_MOTION_MEMORY_LAZYALLOC_TAR         := $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_TAR)
PK_MOTION_MEMORY_LAZYALLOC_PACKAGE     :=
PK_MOTION_MEMORY_LAZYALLOC_CONFIG      := $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_CONFIG)
SUB_TARGET                  += $(PK_MOTION_MEMORY_LAZYALLOC_DIR)/build

PK_MOTION_MEMORY_LAZYALLOC_sh = $(CONFIG_SHELL) $(PK_MOTION_MEMORY_LAZYALLOC_SCRIPTS) \
                 $1X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_NAME)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_VERSION)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_SITE)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_GITHUB)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_SUBNAME)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_CONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_LIBPATH)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_CPPFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_DPKCONFIG)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_CFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_LDFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_CXXFLAGS)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_ASFLAGS)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_BSBIT)X \
                 $(PK_MOTION_MEMORY_LAZYALLOC_BUILDARCH)X \
		 $(PK_MOTION_MEMORY_LAZYALLOC_CSRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_SRCFILE)X \
                 $(CONFIG_PK_MOTION_MEMORY_LAZYALLOC_CSRCFILE)

$(PK_MOTION_MEMORY_LAZYALLOC_DIR)/build: FORCE
	$(Q)$(call PK_MOTION_MEMORY_LAZYALLOC_sh,$(srctree))
