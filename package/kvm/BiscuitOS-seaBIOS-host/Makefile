################################################
#
# BiscuitOS-seaBIOS-host
#
################################################
PK_BISCUITOS_SEABIOS_HOST_NAME	:= BiscuitOS-seaBIOS-host
PK_BISCUITOS_SEABIOS_HOST_VERSION	:= $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_VERSION)
PK_BISCUITOS_SEABIOS_HOST_SITE	:= $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_URL)
PK_BISCUITOS_SEABIOS_HOST_GITHUB	:= $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_GITHUB)
PK_BISCUITOS_SEABIOS_HOST_SUBNAME	:=
PK_BISCUITOS_SEABIOS_HOST_BUILDARCH	:= $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_BUILDARCH)
PK_BISCUITOS_SEABIOS_HOST_DIR	:= $(srctree)/package/kvm/BiscuitOS-QEMU-KVM
PK_BISCUITOS_SEABIOS_HOST_PATCH	:= $(PK_BISCUITOS_SEABIOS_HOST_DIR)/patch
PK_BISCUITOS_SEABIOS_HOST_BSBIT	:= BiscuitOS-seaBIOS-host-$(PK_BISCUITOS_SEABIOS_HOST_VERSION).bsbit
PK_BISCUITOS_SEABIOS_HOST_OUT	:=
PK_BISCUITOS_SEABIOS_HOST_SCRIPTS	:= $(srctree)/scripts/package/package-seaBIOS-host.sh
PK_BISCUITOS_SEABIOS_HOST_TAR	:= $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_TAR)
PK_BISCUITOS_SEABIOS_HOST_PACKAGE	:=
PK_BISCUITOS_SEABIOS_HOST_CONFIG	:= $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_CONFIG)
SUB_TARGET		+= $(PK_BISCUITOS_SEABIOS_HOST_DIR)/build

PK_BISCUITOS_SEABIOS_HOST_sh = $(CONFIG_SHELL) $(PK_BISCUITOS_SEABIOS_HOST_SCRIPTS) \
                 $1X \
                 $(PK_BISCUITOS_SEABIOS_HOST_NAME)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_VERSION)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_SITE)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_GITHUB)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_SUBNAME)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_CONFIG)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_LIBPATH)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_CPPFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_DPKCONFIG)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_CFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_LDFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_CXXFLAGS)X \
                 $(CONFIG_PK_BISCUITOS_SEABIOS_HOST_ASFLAGS)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_BSBIT)X \
                 $(PK_BISCUITOS_SEABIOS_HOST_BUILDARCH)X

$(PK_BISCUITOS_SEABIOS_HOST_DIR)/build: FORCE
	$(Q)$(call PK_BISCUITOS_SEABIOS_HOST_sh,$(srctree))
