PK_DMA_DMABUF_QEMU_DEVICE_NAME        := BiscuitOS-DMA-DMABUF-with-QEMU-Device
PK_DMA_DMABUF_QEMU_DEVICE_VERSION     := $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_VERSION)
PK_DMA_DMABUF_QEMU_DEVICE_SITE        := $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_URL)
PK_DMA_DMABUF_QEMU_DEVICE_GITHUB      := $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_GITHUB)
PK_DMA_DMABUF_QEMU_DEVICE_SUBNAME     :=
PK_DMA_DMABUF_QEMU_DEVICE_BUILDARCH   := $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_BUILDARCH)
PK_DMA_DMABUF_QEMU_DEVICE_DIR         := $(srctree)/package/DMA/BiscuitOS-DMA-DMABUF-with-QEMU-Device
PK_DMA_DMABUF_QEMU_DEVICE_PATCH       := $(PK_DMA_DMABUF_QEMU_DEVICE_DIR)/patch
PK_DMA_DMABUF_QEMU_DEVICE_BSBIT       := BiscuitOS-DMA-DMABUF-with-QEMU-Device-$(PK_DMA_DMABUF_QEMU_DEVICE_VERSION).bsbit
PK_DMA_DMABUF_QEMU_DEVICE_OUT         :=
PK_DMA_DMABUF_QEMU_DEVICE_SCRIPTS     := $(srctree)/scripts/package/package-module.sh
PK_DMA_DMABUF_QEMU_DEVICE_TAR         := $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_TAR)
PK_DMA_DMABUF_QEMU_DEVICE_PACKAGE     :=
PK_DMA_DMABUF_QEMU_DEVICE_CONFIG      := $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_CONFIG)
SUB_TARGET                  += $(PK_DMA_DMABUF_QEMU_DEVICE_DIR)/build

PK_DMA_DMABUF_QEMU_DEVICE_sh = $(CONFIG_SHELL) $(PK_DMA_DMABUF_QEMU_DEVICE_SCRIPTS) \
                 $1X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_NAME)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_VERSION)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_SITE)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_GITHUB)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_SUBNAME)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_CONFIG)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_LIBPATH)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_CPPFLAGS)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_DPKCONFIG)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_CFLAGS)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_LDFLAGS)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_CXXFLAGS)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_ASFLAGS)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_BSBIT)X \
                 $(PK_DMA_DMABUF_QEMU_DEVICE_BUILDARCH)X \
		 $(PK_DMA_DMABUF_QEMU_DEVICE_CSRCFILE)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_SRCFILE)X \
                 $(CONFIG_PK_DMA_DMABUF_QEMU_DEVICE_CSRCFILE)

$(PK_DMA_DMABUF_QEMU_DEVICE_DIR)/build: FORCE
	$(Q)$(call PK_DMA_DMABUF_QEMU_DEVICE_sh,$(srctree))
